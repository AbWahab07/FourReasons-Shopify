{% schema %}
{
  "name":"Slideshow & Banners",
  "tag":"section",
  "settings":[
    {
      "type":"paragraph",
      "content":"Created by 'Slideshow v2' section. Please try to keep your slideshow images, videos the same size"
    },
    {
      "id":"title",
      "type":"text",
      "label":"Section Label [:id]","default": "Slideshow v2"
    },
    {
      "type":"header",
      "content":"LAYOUT"
    },
    {
      "type":"checkbox",
      "id":"boxed_layout",
      "label":"Boxed layout"
    },
    {
       "type": "text",
       "id": "section_padding",
       "label": "Section Padding",
       "placeholder": "E.g: 5px 20px 5px 20px",
       "info": "Order: Top Right Bottom Left"
    },
    {
      "type":"select",
      "id":"slide_height",
      "label":"Slider Height type",
      "default":"auto",
      "options":[
        {"value":"auto","label":"Auto"},
        {"value":"adapt-first-slide","label":"Adapt to First Slide"},
        {"value":"full-screen","label":"Full Screen"}
      ]
    },
    {
       "type":"text",
       "id"   :"slide_height_mob",
       "label":"Slider height"
    },
    {
      "type":"checkbox",
      "id":"parallax",
      "label":"Use Parallax"
    },
    {
       "type":"range",
       "id"   :"slide_active",
       "label":"Set active slide by default",
       "min"   :1,
       "max"   :10,
       "default":1
    },
    {
      "type":"header",
      "content":"AUTO SLIDES "
    },
    {
      "type":"text",
      "id":"autoplay_speed",
      "label":"Change slides every (in second)",
      "default":"5",
      "placeholder": "E.g: 5"
    },
    {
      "type":"select",
      "id":"animation",
      "label":"Slideshow Animation",
      "default":"slide",
      "options":[
        {"value":"coverflow","label":"Coverflow"},
        {"value":"cube","label":"Cube"},
        {"value":"fade","label":"Fade"},
        {"value":"flip","label":"Flip"},
        {"value":"slide","label":"Slide"}
      ]
    },
    {
      "type":"header",
      "content":"NAVIGATOR"
    },
    {
      "type":"checkbox",
      "id":"navigator",
      "label":"Show Navigator Next Prev",
      "default":true
    },
    {
      "type":"checkbox",
      "id":"pagination",
      "label":"Show Pagination",
      "default":true
    },
    {
      "type":"range",
      "id":"nav_pag_style",
      "label":"Navigation & Pagination Style",
      "min":1,
      "max":8,
      "step":1,
      "default":1
    },
    {
      "type":"color",
      "id":"thumb_text_color",
      "label":"Thumbnail text color",
      "default":"#000000"
    },
    {
      "type":"color",
      "id":"dots_color",
      "label":"Pagination color",
      "default":"rgba(0,0,0,0)"
    },
    {
      "type":"color",
      "id":"nav_bg_color",
      "label":"Navigation background color",
      "default":"rgba(0,0,0,0)"
    },
    {
      "type": "range",
      "id": "nav_bg_opacity",
      "label": "Background transparent",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "default": 90
