{%- endcase -%}

{%- capture nav_item_ID -%}
  {%- if _header_style == '4' -%}#header-style .header-desktop .vertical-menu .menu-list>li
  {%- else -%}#header-style .header-desktop .horizontal-menu .menu-list>li>a{% if search_position == 'in_menu' %},.header-desktop .horizontal-menu .menu-list > li .search-icon > a{% endif %}
  {%- endif -%}
{%- endcapture -%}
{%- assign nav_item_ID = nav_item_ID | strip_newslines -%}

{%- capture block_css -%}
  {%- include 'css-responsive', classID: nav_item_ID ,css_value: section.settings.nav_link_padding -%}
  {%- include 'css-responsive', classID: nav_item_ID ,css_value: section.settings.nav_link_margin ,css_property: 'margin' -%}

  {%- if _sticky -%}
    {%- capture nav_sticky_id -%}
      #header-fixed .table-row .table-wrap-items .horizontal-menu .menu-list>li.li-search .search-icon > a,#header-fixed .table-row .table-wrap-items .horizontal-menu .menu-list>li > a
    {%- endcapture -%}
    {%- include 'css-responsive', classID: nav_sticky_id ,css_value: section.settings.fix_header_nav_padding -%}
    {%- include 'css-responsive', classID: nav_sticky_id ,css_value: section.settings.fix_header_nav_margin ,css_property: 'margin' -%}
  {%- endif -%}

  {%- if _header_style == '3' -%}
    {%- include 'css-responsive', classID: '#header-style.style-3 .header-desktop .table-wrap-items', css_value: _header_padding -%}
  {%- else -%}
    {%- include 'css-responsive', classID: '#header-style .header-desktop .table-row:first-child', css_value: _header_padding -%}
  {%- endif -%}
  {%- if _sticky -%}{%- include 'css-responsive', classID: '#header-fixed .table-row:first-child', css_value: _sticky_header_padding -%}{%- endif -%}

  {%- unless _search_form_radius == blank and _btn_form_radius == blank -%}
    {%- include 'css-responsive', classID: _search_form_id, css_value: _search_form_radius ,css_property: 'border-radius' -%}
    {%- include 'css-responsive', classID: '#header-search button[type="submit"]', css_value: _btn_form_radius ,css_property: 'border-radius' -%}
  {%- endunless -%}

  {%- include 'css-responsive', classID: '#header-style #header-search', css_value: section.settings.search_bar_wide ,css_property: 'width' -%}

  {%- unless _search_form_txt_color == 'rgba(0,0,0,0)' -%}
  #search__category, #header-style #header-search input[type="text"], #header-style #header-search input[type="text"]::-webkit-input-placeholder{color: {{_search_form_txt_color}};}
  {%- endunless -%}
  
  {%- unless _search_form_bg_color == 'rgba(0,0,0,0)' -%}
  {{_search_form_id | split: ',' | last }}{background-color: {{_search_form_bg_color}};}
  {%- endunless -%}

  {%- unless _search_form_btn_color == 'rgba(0,0,0,0)' and _search_frm_btn_bg == 'rgba(0,0,0,0)' -%}
    #header-style #header-search button[type="submit"]{
