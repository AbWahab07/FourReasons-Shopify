{%- if _header_padding != blank -%}
  {%- unless _header_padding contains ',' -%}
    {%- assign _header_padding = section.settings.header_padding | append: ',null ,null' -%}
  {%- endunless -%}
{%- endif -%}

{%- if _sticky_header_padding != blank -%}
  {%- unless _sticky_header_padding contains ',' -%}
    {%- assign _sticky_header_padding = section.settings.fix_header_padding | append: ',null ,null' -%}
  {%- endunless -%}
{%- endif -%}

