{%- include 'header-style', style: 'initial' -%}
{%- capture _except_block_type -%}++hd_btn++++hd_text++++mega-menu++++vertical-mega-menu++++mega-menu-tab++{%- endcapture -%}
{%- capture header_class -%}style-{{ _header_style }} nav-style-{{_menu_hover}}{% if section.settings.break_container %} f-break{% endif %}{% if _cus_text_align != blank %} text-custom-align--{{_cus_text_align}}{% endif %}{%- endcapture -%}

<div id="header-style" class="header-content layout-{{ _layout }} {{header_class}}" data-style="{{_header_style}}" data-section-type="header" data-section-id="{{section.id}}">

  {%- if _sticky or _sticky_mobile -%}
    {%- assign _st_hide_sticky_icons = section.settings.hide_sticky_icons -%}

    <div id="header-fixed" class="" data-sticky="{{_sticky}}" data-sticky-mob="{{_sticky_mobile}}" data-type="{{settings.type_header_fixed}}">
      {%- assign __header_style = _header_style | times: 1 -%}

      {%- if section.settings.not_header_fixed_style and __header_style < 5 -%}
        <div class="d-none d-lg-block">{% include 'header-style', style: _header_style ,is_sticky: true, sticky_icons: _st_hide_sticky_icons %}</div>
        <div class="d-lg-none">{%- include 'header-style', style: 'sticky' ,is_mobile: true -%}</div>

      {%- else -%}
        {%- include 'header-style', style: 'sticky' -%}
      {%- endif -%}
    </div>
  {%- endif -%}

  <div class="header-desktop d-none d-lg-block">
    {% include 'header-style', style: _header_style %}
  </div>

  <div class="header-mobile d-lg-none header-mobile-{{_mobile_style}}">
    {% include 'header-style', style: 'mobile' %}
  </div>
</div>

<div class="header-navigation-mobile d-lg-none mobile-style-{{_mobile_style}}">
  {% include 'navigation-mobile' with header_style: _header_mobile %}
</div>

