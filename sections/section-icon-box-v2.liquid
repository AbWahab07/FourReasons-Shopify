{%- if section.settings.boxed_layout -%}{%- assign _layout = 'boxed' -%}{%- else -%}{%- assign _layout = 'full' -%}{%- endif -%}
{%- assign _lazyload          = settings.use_lazyload -%}
{%- assign _bg_color          = section.settings.section_bg_color -%}
{%- assign _bg_image          = section.settings.section_bg_image -%}
{%- assign _content_bg_color  = section.settings.bg_content_color -%}
{%- assign _spacing_items     = section.settings.spacing_items -%}
{%- assign _border            = section.settings.use_border -%}
{%- assign _use_item_border   = section.settings.use_item_border -%}
{%- assign _reverse           = section.settings.reverse_margin -%}
{%- assign margin_top         = section.settings.margin_top -%}
{%- assign section_padding    = section.settings.section_padding -%}
{%- assign p_type             = section.settings.b_heading_type -%}
{%- assign p_align            = section.settings.content_align -%}
{%- assign p_h_pos            = section.settings.heading_position -%}
{%- assign p_h_img_align      = section.settings.heading_img_align -%}
{%- assign p_h_color          = section.settings.heading_color -%}
{%- assign h_content_color    = section.settings.h_content_color -%}
{%- assign content_color      = section.settings.content_color -%}
{%- assign content_inline     = section.settings.content_inline -%}
{%- assign show_h_section     = section.settings.show_section_heading -%}
{%- assign p_h_cusPos         = section.settings.custom_pos -%}
{%- assign _show_shadow       = section.settings.show_shadow -%}
{%- assign _ib_item_padding   = section.settings.ib_item_padding -%}
{%- assign _i_btn_inherit     = section.settings.i_btn_inherit -%}
{%- assign _heading_fs        = section.settings.heading_fs -%}
{%- assign _content_fs0       = section.settings.content_fs0 -%}
{%- assign _content_fs1       = section.settings.content_fs1 -%}
{%- assign _content_fw0       = section.settings.content_fw0 -%}
{%- assign _content_fw1       = section.settings.content_fw1 -%}

{%- capture _bg_image -%}{% if _bg_image != blank %}{{_bg_image | img_url: '1920x'}}{% endif %}{%- endcapture -%}
{%- capture image_empty -%}<div class="empty-image" style="max-width: 80px;margin: 0 auto;">{%- include 'svgset', type: 'image' -%}</div>{%- endcapture -%}
{%- capture section_ID -%}.section-show-{{section.id}}{%- endcapture -%}

{%- include 'include-item-per-row' -%}
{%- render 'theme-snippet' ,type: 'section_id' -%}

<div class="policies-v2 policies-wrapper layout-{{_layout }} section-show-{{section.id}}{% if _bg_image != blank %} bg-image{% if _lazyload %} lazyload" data-bgset="{{_bg_image}} 1920w{%- endif -%}{%- endif -%}" data-section-type="policies" data-section-id="{{section.id}}">
  {%- if _layout == 'boxed' -%}<div class="container">{%- endif -%}
    {%- unless show_h_section -%}{%- include 'head-title' -%}{%- endunless -%}

    <div class="policies-content{% if _border %} has-border{% endif %}{% unless _spacing_items %} no-padding{% endunless %}{% if _use_item_border %} item-has-border{% endif %}{% if _show_shadow %} has-shadow{% endif %}">
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'big_content' -%}
            {%- assign _big_type     = block.settings.big_type -%}
            {%- unless _big_type == 'none' -%}
              {%- assign has_big = true -%}
              {%- assign _big_pos      = block.settings.big_pos -%}
              {%- assign _big_width    = block.settings.big_width -%}
              {%- assign _hide_mobile  = block.settings.hide_mobile -%}

              <div class="row"{{ block.shopify_attributes }}>
                <div class="col-md-{{_big_width}} col-12{% if _big_pos == 'right' %} order-md-2{% endif %}{% if _hide_mobile %} d-none d-md-block{% endif %}">
                  <div class="big-content-{{_big_type}} {% if _big_type == 'text' %} content-{{block.settings.align_vertical}}{% endif %}">
                    {%- case _big_type -%}
                      {%- when 'image' -%}
                        {%- assign _image = block.settings.image -%}
                        {%- unless _image == blank -%}
                          {%- include 'image-style', image: _image -%}
                        {%- else -%}
                          <div class="empty-image">{%- include 'svgset' -%}</div>
                        {%- endunless -%}

                      {%- when 'text' -%}
                        {%- assign heading    = block.settings.heading -%}
                        {%- assign content    = block.settings.content -%}
                        {%- assign c_align    = block.settings.align -%}
                        {%- assign h_fsize    = block.settings.heading_font_size -%}

                        <div class="big-content-wrap text-{{c_align}}">
                          <div class="big-heading"><p>{{heading}}</p></div>
                          {%- unless content == blank -%}<div class="big-content">{{content}}</div>{%- endunless -%}
                        </div>
                        {%- capture big_content_css -%}
                          {%- include 'css-responsive', classID: section_ID, nextClassID: ' .big-content-wrap .big-heading', css_value: h_fsize, css_property: 'font-size' -%}
                        {%- endcapture -%}
                        {%- assign block_css = block_css | append: big_content_css -%}
                      {%- else -%}
                    {%- endcase -%}
                  </div>
                </div>
                <div class="col-md-{% if _big_width == '4' %}8{% else %}6{% endif %} col-12{% if _big_pos == 'right' %} order-md-1{% endif %}">
            {%- endunless -%}
            {%- break -%}
          {%- endif -%}
        {%- endfor -%}

                {%- if show_h_section -%}{%- include 'head-title' -%}{%- endif -%}
                <div class="row">
                  {%- for block in section.blocks -%}
                    {%- if block.type == 'block_content' -%}
                      {%- assign b_bg_color   = block.settings.block_bg_color -%}
                      {%- assign b_bg_image   = block.settings.block_bg_image -%}
                      {%- assign p_heading    = block.settings.block_heading -%}
                      {%- assign p_h_content  = block.settings.heading_color -%}
                      {%- assign p_image      = block.settings.image -%}
                      {%- assign p_icon       = block.settings.icon -%}
                      {%- assign p_title      = block.settings.title -%}
                      {%- assign p_content    = block.settings.content -%}
                      {%- assign p_btn_text   = block.settings.button -%}
                      {%- assign p_btn_link   = block.settings.button_link | default: 'javascript:void(0);' -%}
                      {%- unless b_bg_image == blank -%}
                        {%- assign _block_bg_size       = block.settings.block_bg_size -%}
                        {%- assign _block_bg_repeat     = block.settings.block_bg_repeat -%}
                        {%- assign _block_bg_position   = block.settings.block_bg_position -%}
                      {%- endunless -%}

                      {%- capture _b_bg_image -%}{% if b_bg_image != blank %}{{b_bg_image | img_url: '768x'}}{% endif %}{%- endcapture -%}

                      <div class="policy-item-{{block.id}} policy-wrap-item {{items_class}}"{{ block.shopify_attributes }}>
                        <div class="policy-item text-{{p_align}}{% if p_h_pos =='left' and p_type != 'none' %} heading-left{% endif %}{% if _b_bg_image != blank %} block-bg-image{% if _lazyload %} lazyload" data-bgset="{{_b_bg_image}} 768w{%- endif -%}{%- endif -%}">

                          {%- capture _policy_heading_item -%}
                            {%- unless p_type == 'none' -%}
                              <div class="policy-heading policy-{{p_type}}{% if p_h_cusPos %} d-inline-block{% else %}{% if p_h_pos =='left' %} align-{{p_h_img_align}}{% endif %}{% endif %}">
                                {%- case p_type -%}
                                  {%- when 'image' -%}
                                    <div class="image">
                                      {%- unless p_image == blank -%}
                                        <img {% if _lazyload %}class="lazyload" data-{% endif %}src="{{p_image | img_url: '80x'}}">
                                      {%- else -%}{{image_empty}}{%- endunless -%}
                                    </div>

                                  {%- when 'icon' -%}
                                    {%- unless p_icon == blank -%}
                                      {% include 'icons', type: 'icon_free', name: p_icon %}
                                    {%- else -%}{{image_empty}}{%- endunless -%}
                                  {%- when 'text' -%}
                                    {%- unless p_heading == blank -%}<p class="ib-heading--text{% if _heading_fs contains 'h' %} {{_heading_fs}}{% endif %} fw-{{section.settings.heading_text_fw}}">{{p_heading}}</p>{%- endunless -%}
                                  {%- else -%}
                                {%- endcase -%}
                              </div>
                            {%- endunless -%}
                          {%- endcapture -%}

                          {%- unless p_h_cusPos -%}{{_policy_heading_item}}{%- endunless -%}
                          <div class="policy-content{% if content_inline %} d-md-flex{% endif %}">
                            <div class="title {% if _content_fs0 contains 'h' %} {{_content_fs0}}{% endif %} fw-{{_content_fw0}}">
                              {%- if p_h_cusPos -%}
                                {{- p_title | replace: '[Heading]', _policy_heading_item -}}
                              {%- else -%}
                                {{- p_title -}}
                              {%- endif -%}
                            </div>
                            {%- unless p_content == blank -%}
                              <div class="content{% if _content_fs1 contains 'h' %} {{_content_fs1}}{% endif %} fw-{{_content_fw1}}">
                                {%- if p_h_cusPos -%}
                                  {{- p_content | replace: '[Heading]', _policy_heading_item -}}
                                {%- else -%}
                                  {{- p_content -}}
                                {%- endif -%}
                              </div>
                            {%- endunless -%}
                            {%- unless p_btn_text == blank -%}
                              <div class="btn-group">
                                <a href="{{ p_btn_link }}" class="btn ib-item_btn btn-{{_i_btn_inherit}}" aria-label="PolicyButton">
                                  <span class="button-label">{{ p_btn_text }}</span>
                                </a>
                              </div>
                            {%- endunless -%}
                          </div>
                        </div>

                      {%- capture block_item_css -%}
                        {%- if b_bg_color != blank  -%}.policy-item-{{block.id}} > div{background-color: {{b_bg_color}};}{%- endif -%}
                        {%- if p_h_content != blank and p_h_content != 'rbga(0,0,0,0)' -%}
                        .policies-wrapper.section-show-{{section.id}} .policy-item-{{block.id}} .policy-content .title{color: {{p_h_content}};
                        }{%- endif -%}
                        {%- if _b_bg_image != blank -%}
                        .policy-item-{{block.id}} .block-bg-image{background-size: {{_block_bg_size}};background-repeat: {{_block_bg_repeat}};background-position: {{_block_bg_position}};{%- if _lazyload == false -%}background-image: url({{_b_bg_image}});{%- endif -%}
                        }{%- endif -%}
                      {%- endcapture -%}
                      {%- assign block_css = block_css | append: block_item_css -%}
                      </div>
                    {%- endif -%}
                  {%- endfor -%}
                </div>


          {%- include 'include-button', btn_type: 'section' -%}
        {%- if has_big -%}
            </div>
          </div>
        {%- endif -%}
      {%- else -%}

      <div class="row">
        {%- for i in (1..3) -%}
          <div class="{{items_class}}">
            <div class="policy-item">
              <div class="policy-image">
                {{image_empty}}
              </div>
              <div class="text">
                <div class="title">Block content</div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>

      {%- endif -%}

    </div>
  {%- if _layout == 'boxed' -%}</div>{%- endif -%}
  {%- capture ib_itemClass -%}.section-show-{{section.id}} .policy-item{%- endcapture -%}

  {%- capture section_final_css -%}
    {%- include 'section-general-css' -%}{{block_css}}
    {% if margin_top > 0 %}.policies-wrapper.section-show-{{section.id}}{
      margin-top: {%- if _reverse -%}-{%- endif -%}{{margin_top}}px;}{%- endif -%}
    {%- if p_h_color != blank and p_h_color != 'rgba(0,0,0,0)' -%}
    .policies-wrapper.section-show-{{section.id}} .policy-heading{color: {{p_h_color}};}{%- endif -%}
    {%- if h_content_color != blank and h_content_color != 'rgba(0,0,0,0)' -%}
    .policies-wrapper.section-show-{{section.id}} .policy-content .title{color:{{h_content_color}};}{%- endif -%}
    {%- if content_color != blank and content_color != 'rgba(0,0,0,0)' -%}
    .policies-wrapper.section-show-{{section.id}} .policy-content .content{color:{{content_color}};}{%- endif -%}
    {%- if _content_bg_color != blank and _content_bg_color != 'rgba(0,0,0,0)' -%}
    .policies-wrapper.section-show-{{section.id}} .policies-content{background-color: {{_content_bg_color}};}{%- endif -%}

    {%- unless _heading_fs  contains 'h' -%}
      {%- if p_type == 'image' -%}
        {%- include 'css-responsive' ,classID: _secionID ,nextClassID: ' .policy-heading > *' ,css_value: _heading_fs  ,css_property: 'width' -%}
      {%- else -%}
        {%- include 'css-responsive' ,classID: _secionID ,nextClassID: ' .policy-heading > *' ,css_value: _heading_fs  ,css_property: 'font-size' -%}
        {%- include 'css-responsive' ,classID: _secionID ,nextClassID: ' .policy-heading > *' ,css_value: section.settings.heading_lh  ,css_property: 'line-height' -%}
        {%- include 'css-responsive' ,classID: _secionID ,nextClassID: ' .policy-content .ib-heading--text' ,css_value: section.settings.heading_lsp ,css_property: 'letter-spacing' -%}
      {%- endif -%}
    {%- endunless -%}
    {%- unless _content_fs0 contains 'h' -%}{%- include 'css-responsive' ,classID: _secionID ,nextClassID: ' .policy-content .title'    ,css_value: _content_fs0 ,css_property: 'font-size' -%}{%- endunless -%}
    {%- unless _content_fs1 contains 'h' -%}{%- include 'css-responsive' ,classID: _secionID ,nextClassID: ' .policy-content .content'  ,css_value: _content_fs1 ,css_property: 'font-size' -%}{%- endunless -%}
    {%- include 'css-responsive' ,classID: _secionID ,nextClassID: ' .policy-content .title'    ,css_value: section.settings.content_lh0 ,css_property: 'line-height' -%}
    {%- include 'css-responsive' ,classID: _secionID ,nextClassID: ' .policy-content .content'  ,css_value: section.settings.content_lh1 ,css_property: 'line-height' -%}

    {%- include 'css-responsive' ,classID: _secionID ,nextClassID: ' .policy-content .title'    ,css_value: section.settings.content_lsp0 ,css_property: 'letter-spacing' -%}
    {%- include 'css-responsive' ,classID: _secionID ,nextClassID: ' .policy-content .content'  ,css_value: section.settings.content_lsp1 ,css_property: 'letter-spacing' -%}

    {%- include 'css-responsive', classID: ib_itemClass ,css_value: _ib_item_padding -%}
    {%- include 'css-responsive', classID: _secionID, nextClassID: ' .policy-wrap-item'            ,css_value: section.settings.blocks_margin       ,css_property: 'margin' -%}
    {%- include 'css-responsive', classID: _secionID, nextClassID: ' .policy-content .title'       ,css_value: section.settings.ib_title_margin     ,css_property: 'margin' -%}
    {%- include 'css-responsive', classID: _secionID, nextClassID: ' .policy-content .content'     ,css_value: section.settings.ib_content_margin   ,css_property: 'margin' -%}
    {%- include 'css-responsive', classID: _secionID, nextClassID: ' .policy-content .btn-group'   ,css_value: section.settings.ib_button_margin    ,css_property: 'margin' -%}

    {%- if _i_btn_inherit == 0 -%}
      {%- assign _i_btn_color           = section.settings.i_btn_color    | default: 'rgba(0,0,0,0)' -%}
      {%- assign _i_btn_border          = section.settings.i_btn_border   | default: 'rgba(0,0,0,0)' -%}
      {%- assign _i_btn_bg_color        = section.settings.i_btn_bg_color | default: 'rgba(0,0,0,0)' -%}

      {{- ib_itemClass}} .ib-item_btn{font-weight: {{section.settings.i_btn_fw}};
          {%- unless _i_btn_color == 'rgba(0,0,0,0)'    -%}color: {{_i_btn_color}};{%- endunless -%}
          {%- unless _i_btn_border == 'rgba(0,0,0,0)'   -%}border: 1px solid {{_i_btn_border}};{%- endunless -%}
          {%- unless _i_btn_bg_color == 'rgba(0,0,0,0)' -%}background-color: {{_i_btn_bg_color}}{%- endunless -%}
      }
      {%- include 'css-responsive', classID: ib_itemClass ,nextClassID: ' .ib-item_btn.btn-0' ,css_value: section.settings.ib_button_padding -%}
      {%- include 'css-responsive', classID: ib_itemClass ,nextClassID: ' .ib-item_btn.btn-0' ,css_value: section.settings.i_btn_fs              ,css_property: 'font-size' -%}
      {%- include 'css-responsive', classID: ib_itemClass ,nextClassID: ' .ib-item_btn.btn-0' ,css_value: section.settings.ib_button_lh          ,css_property: 'line-height' -%}
      {%- include 'css-responsive', classID: ib_itemClass ,nextClassID: ' .ib-item_btn.btn-0' ,css_value: section.settings.ib_button_lsp         ,css_property: 'letter-spacing' -%}
      {%- include 'css-responsive', classID: ib_itemClass ,nextClassID: ' .ib-item_btn.btn-0' ,css_value: section.settings.i_btn_border_radius   ,css_property: 'border-radius' -%}
    {%- endif -%}
  {%- endcapture -%}

  <style>{{section_final_css | strip_newlines }}</style>
</div>
