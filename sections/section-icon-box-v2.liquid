{
  "name":"Icon box v2",
  "tag":"section",
  "settings":[
    {
      "type":"paragraph",
      "content":"Created by 'Icon box v2' section"
    },
    {
      "type":"text",
      "id":"title",
      "label":"Section Label [:id]","default": "Icon box v2"
    },
    {
      "type":"header",
      "content":"LAYOUT"
    },
    {
      "type":"checkbox",
      "id":"boxed_layout",
      "label":"Boxed layout",
      "default":true
    },
    {
      "type":"text",
      "id":"section_padding",
      "label":"Section Padding",
      "placeholder":"E.g: 5px 20px 5px 20px",
      "info":"Order: Top Right Bottom Left"
    },
    {
      "type":"color",
      "id":"section_bg_color",
      "label":"Background color",
      "default":"#FFFFFF"
    },
    {
      "type":"image_picker",
      "id":"section_bg_image",
      "label":"Background image"
    },
    {
      "type":"select",
      "id":"section_bg_size",
      "label":"Background Size",
      "default":"cover",
      "options":[
        {
          "value":"auto",
          "label":"Auto"
        },
        {
          "value":"cover",
          "label":"Cover"
        },
        {
          "value":"contain",
          "label":"Contain"
        }
      ]
    },
    {
      "type":"select",
      "id":"section_bg_repeat",
      "label":"Background Image Repeat:",
      "default":"no-repeat",
      "options":[
        {
          "value":"no-repeat",
          "label":"No Repeat"
        },
        {
          "value":"repeat",
          "label":"Repeat"
        },
        {
          "value":"repeat-x",
          "label":"Repeat X"
        },
        {
          "value":"repeat-y",
          "label":"Repeat Y"
        }
      ]
    },
    {
      "type":"select",
      "id":"section_bg_position",
      "label":"Background Image Position:",
      "default":"center center",
      "options":[
        {
          "value":"left top",
          "label":"Left Top"
        },
        {
          "value":"center top",
          "label":"Center Top"
        },
        {
          "value":"right top",
          "label":"Right Top"
        },
        {
          "value":"left center",
          "label":"Left Center"
        },
        {
          "value":"center center",
          "label":"Center Center"
        },
        {
          "value":"right center",
          "label":"Right Center"
        },
        {
          "value":"left bottom",
          "label":"Left Bottom"
        },
        {
          "value":"center bottom",
          "label":"Center Bottom"
        },
        {
          "value":"right bottom",
          "label":"Right Bottom"
        }
      ]
    },
    {
      "type":"header",
      "content":"Section Heading"
    },
    {
      "type":"select",
      "id":"heading_content_align",
      "label":"Heading alignment",
      "options":[
        {
          "value":"left",
          "label":"Left"
        },
        {
          "value":"center",
          "label":"Center"
        },
        {
          "value":"right",
          "label":"Right"
        }
      ],
      "default":"center"
    },
    {
      "type":"text",
      "id":"heading_text",
      "label":"Heading"
    },
    {
      "type":"text",
      "id":"subheading_text",
      "label":"Subheading"
    },
    {
      "type":"textarea",
      "id":"subheading2_text",
      "label":"Subheading 2"
    },
    {
      "type":"color",
      "id":"section_heading_color",
      "label":"Heading color",
      "info":"Blank to inherit color"
    },
    {
      "type":"color",
      "id":"section_subheading_color",
      "label":"Subheading color",
      "info":"Blank to inherit color"
    },
    {
      "type":"color",
      "id":"section_subheading2_color",
      "label":"Subheading 2 color",
      "info":"Blank to inherit color"
    },
    {
      "type":"header",
      "content":"Section button"
    },
    {
      "type":"text",
      "id":"button",
      "label":"Button Label"
    },
    {
      "type":"url",
      "id":"button_link",
      "label":"Button Link",
      "info":"Remove link to hide"
    },
    {
      "type":"select",
      "id":"button_align",
      "label":"Horizontal alignment",
      "options":[
        {
          "value":"left",
          "label":"Left"
        },
        {
          "value":"center",
          "label":"Center"
        },
        {
          "value":"right",
          "label":"Right"
        }
      ],
      "default":"center"
    },
    {
      "type":"checkbox",
      "id":"button_corner",
      "label":"Button Rounded Corners"
    },
    {
      "type":"range",
      "id":"button_inherit_style",
      "label":"Inherit Button style:",
      "min":0,
      "max":3,
      "default":1,
      "info":"Set 0 to customize button"
    },
    {
      "type":"color",
      "id":"button_color",
      "label":"Button Text color",
      "default":"#000000"
    },
    {
      "type":"color",
      "id":"button_border",
      "label":"Button Border color",
      "default":"#000000"
    },
    {
      "type":"color",
      "id":"button_bg_color",
      "label":"Button Background color",
      "default":"#FFFFFF"
    },
    {
      "type":"header",
      "content":"Layout content"
    },
    {
      "type":"text",
      "id":"items_resp",
      "label":"Max number of items per row",
      "placeholder":"xl,lg,md,sm,xs,xxs",
      "info":"E.g: 4,3,2",
      "default":"3,1"
    },
    {
      "type":"checkbox",
      "id":"spacing_items",
      "label":"Spacing items",
      "default":true
    },
    {
      "type":"checkbox",
      "id":"show_section_heading",
      "label":"Show Section Heading inside"
    },
    {
      "type":"checkbox",
      "id":"show_shadow",
      "label":"Show Shadow"
    },
    {
      "type":"checkbox",
      "id":"use_item_border",
      "label":"Show Border items"
    },
    {
      "type":"checkbox",
      "id":"use_border",
      "label":"Show Border between items"
    },
    {
      "type":"checkbox",
      "id":"content_inline",
      "label":"Show Content on same line"
    },
    {
      "type":"checkbox",
      "id":"custom_pos",
      "label":"Custom Heading position",
      "info":"Use keyword [Heading] in your content to customize"
    },
