{%- if section.blocks.size > 0 -%}
  <div class="sub-collection-wrapper">
    <div class="container">
      {%- if section.settings.header_title != blank -%}
        <div class="section-header">
          <h2>{{ section.settings.header_title }}</h2>
        </div>
      {%- endif -%}

      <div class="sub-collection-list">
        {%- if section.settings.sub_header_title != blank -%}
          <h3>{{ section.settings.sub_header_title }}</h3>
        {%- endif -%}

        <div class="collection-list-wrapper">
          {%- for block in section.blocks -%}
            {%- if block.settings.title != blank -%}
              <div class="list-item">
                <a href="{{ block.settings.link }}">{{ block.settings.title }}</a>
                <div class="list-indicator"></div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
  {
    "name": "Collection List",
    "settings": [
	  {
	    "type":"text",
		"id":"header_title",
		"label":"Heading"
	  },
	  {
	    "type":"text",
		"id":"sub_header_title",
		"label":"Sub Heading"
	  }
    ],
    "blocks":[
      {
        "type":"text",
        "name":"collection",
        "settings":[
		  {
		    "type":"text",
		 	"id":"title",
		 	"label":"Title"
	  	  },
          {
             "type": "url",
             "id": "link",
             "label": "Link to"
          }
		]
      }
    ]
  }
{% endschema %}
