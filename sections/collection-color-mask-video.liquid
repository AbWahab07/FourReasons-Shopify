<div class="collection-video-wrapper">
  <div class="container">
  	{%- if section.settings.image != blank -%}
      <div class="video-wrap">
        <div class="video-area">
          <div id="video-play-button" style="background-image: url({{ section.settings.image_play_icon | img_url: 'master' }});">           
            <div id="video-play-icon" style="background-image: url({{ section.settings.image_play_button | img_url: 'master' }});"></div>
          </div>
          <video id="js-video" src="{{ section.settings.video_url }}" style="width: 100%; height: auto;" poster="{{ section.settings.image | img_url: 'master' }}"/>
        </div>        
      </div>
    {% endif %}
    
    {%- if section.settings.header_title !=blank -%}
      <div class="text-wrap">
		<h2>{{ section.settings.header_title }}</h2>
        
        {%- if section.settings.header_text != blank -%}
          {{ section.settings.header_text }}
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
  {
    "name": "Color Mask Video",
    "settings": [
      {
        "type":"image_picker",
        "id":"image",
        "label":"Image"
      },
      {
        "type":"image_picker",
        "id":"image_play_button",
        "label":"Play Button Text"
      },
      {
        "type":"image_picker",
        "id":"image_play_icon",
        "label":"Play Button Icon"
      },
      {
        "id":"video_url",
        "label":"Video Url",
        "type":"text"
      },
	  {
        "type":"text",
        "id":"header_title",
        "label":"Heading"
      },
      {
        "type":"richtext",
        "id":"header_text",
        "label":"Text"
      }
    ]
  }
{% endschema %}
