{%- include 'breadcrumb' -%}
{%- assign title_h = 'h5' -%}

<div id="col-main" class="page-login" style="padding-top: 80px; padding-bottom: 80px;">

  <div class="container">
    <div class="page-heading h3 text-center">
      <p>{{ 'general.header.my_account' | t | upcase }}</p>
    </div>

    <div id="login-error" class="alert alert-danger hide">
      <button type="button" class="close" title="{{'customer.general.close' | t }}" data-dismiss="alert">Ã—</button>
      <span id="error-content"></span>
    </div>

    <div class="row">
      <div class="col-md-6 col-12">
        <div class="content-inner">
          
<!--This code is generated by the Bold Memberships app.-->
<script data-cfasync="false" src="https://mem.boldapps.net/app_assets/js/plan_multibutton.js"></script><style type="text/css">@import url("https://mem.boldapps.net/app_assets/css/bs-modal-only.min.css");</style><style type="text/css">@import url("https://shappify-cdn.com/mem/www.fourreasons.us-widget-style.css");</style><script src="//checkout.stripe.com/checkout.js"></script><div class="memberships_button" id="checkout_55461"  data-enable-email-verification="0" data-billingid="55461" data-planid="27690" data-approot="https://mem.boldapps.net" data-hash="b6c56b6884f63e8ed70bdc3219b5bcc1" data-label="Buy Membership" data-domain="kc-professional.myshopify.com"></div>
<!--End of Bold Memberships code.-->
          
          {% include 'bold_mem_helper' with 'product' %}

          
          
          <p class="heading-col {{ title_h }}">{{'customer.login.title' | t }}</p>
          <div id="customer-login">
            <div id="customer-login-form">
              <div class="form-wrapper">

                {%- form 'customer_login' -%}
                  <input type="hidden" name="checkout_url" value="/account" />
                  <input type="hidden" name="token" id="token" value=""/>

                  {%- if form.errors -%}
                    <script>
                      $('#error-content').html('{{ form.errors | default_errors }}').parents('#login-error').removeClass('hide');
                    </script>
                  {%- endif -%}

                  <div class="control-wrapper">
                    <label for="customer_email">{{ 'customer.login.email' | t }}<span class="req">*</span></label>
                    <input type="email" required name="customer[email]" id="customer_email" autofocus/>
                  </div>

                  {%- if form.password_needed -%}
                    <div class="control-wrapper">
                      <label for="customer_password">{{ 'customer.login.password' | t }}<span class="req">*</span></label>
                      <input type="password" required name="customer[password]" id="customer_password" class="password" />
                    </div>
                  {%- endif -%}

                  <div class="control-wrapper last">
                    <a class="forgot-pass" href="javascript:;" onclick="showRecoverPasswordForm()">{{ 'customer.login.forgot_password' | t }}</a>
                    <button class="btn btn-1" type="submit">{{ 'customer.login.sign_in' | t }}</button>
                  </div>
                {%- endform -%}

              </div>
            </div>

            <div id="recover-password" style="display: none;">
              <p>Please enter your email address below. You will receive a link to reset your password.</p>

              <div class="form-wrapper">
                {%- form 'recover_customer_password' -%}

                  {%- if form.posted_successfully? -%}
                    <span class="hide reset-password-success">We've sent you an email with a link to update your password.</span>
                  {%- endif -%}

                  {%- if form.errors -%}
                    <script>
                      $('#error-content').html('{{ form.errors | default_errors }}').parents('#login-error').removeClass('hide');
                    </script>
                  {%- endif -%}

                  <div class="control-wrapper">
                    <input type="email" value="" name="email" id="recover-email" placeholder="{{ 'customer.recover_password.email' | t }}" />
                  </div>

                  <div class="control-wrapper">
                    <button class="btn btn-1" type="submit">{{ 'customer.recover_password.submit' | t }}</button>
                    <a class="cancel btn btn-3" href="javascript:;" onclick="hideRecoverPasswordForm();">{{ 'customer.recover_password.cancel' | t }}</a>
                  </div>

                {%- endform -%}
              </div>

            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-12">
        <div class="content-inner">
          <p class="heading-col {{ title_h }}"> {{'customer.register.title' | t }}</p>
          <div id="customer-register">
            <div class="form-wrapper">

              {%- form 'create_customer' -%}

                {%- if form.errors -%}
                  <script>
                    $('#error-content').html('{{ form.errors | default_errors }}').parents('#login-error').removeClass('hide');
                  </script>
                {%- endif -%}

                <div class="control-wrapper">
                  <label for="first_name">{{'customer.register.first_name' | t }}</label>
                  <input type="text" name="customer[first_name]" id="first-name" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words"/>
                </div>

                <div class="control-wrapper">
                  <label for="last_name">{{'customer.register.last_name' | t }}</label>
                  <input type="text" name="customer[last_name]" id="last-name" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words" />
                </div>

                <div class="control-wrapper{% if form.errors contains 'email' %} has-error{% endif %}">
                  <label for="email">{{'customer.register.email' | t }}<span class="req">*</span></label>
                  <input type="email" value="{{ form.email }}" name="customer[email]" id="email"{% if form.errors contains 'email' %} class="error"{% endif %} />
                </div>

                <div class="control-wrapper{% if form.errors contains 'password' %} has-error{% endif %}">
                  <label for="password">{{'customer.register.password' | t }}<span class="req">*</span></label>
                  <input type="password" value="" name="customer[password]" id="password" class="password{% if form.errors contains 'password' %} error{% endif %}" />
                </div>

                <div class="control-wrapper">
                  <button class="btn btn-1" type="submit">{{'customer.register.submit' | t }}</button>
                </div>
              {%- endform -%}

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript">
    if (window.location.hash == '#recover') { showRecoverPasswordForm(); }

    function showRecoverPasswordForm() {
      $('#recover-password').fadeIn();
      $('#customer-login-form').hide();
      window.location.hash = '#recover';
      return false;
    }

    function hideRecoverPasswordForm() {
      $('#recover-password').hide();
      $('#customer-login-form').fadeIn();
      window.location.hash = '';
      return false;
    }
  </script>

</div>
