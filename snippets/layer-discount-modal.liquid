{%- unless product.metafields.c_f.discount_code == blank -%}

  {%- assign _discount_popup_banner = block.settings.banner_discount -%}
  {%- assign _discount_popup_text_1 = block.settings.discount_popup_text_1 -%}
  {%- assign _discount_popup_text_2 = block.settings.discount_popup_text_2 -%}

  <div id="discount-modal"{{block.shopify_attributes}} style="display: none;">
    <div class="underlay"></div>
    <div class="wrap-modal">
      <a href="javascript:void(0);"><i class="demo-icon icon-uniE90A-1"></i></a>

      <div class="modal-body">
        {%- unless _discount_popup_banner == blank -%}
          <div class="image">
            {%- include 'image-style' ,image: _discount_popup_banner -%}
          </div>
        {%- endunless -%}
        <div class="content">
          {% unless _discount_popup_text_1 == blank %}
            <h5>{{ _discount_popup_text_1 }}</h5>
          {% endunless %}

          {% unless _discount_popup_text_2 == blank %}
            <p>{{ _discount_popup_text_2 }}</p>
          {% endunless %}
          <div class="discount-redirect"></div>
        </div>
      </div>

    </div>
  </div>
  <script crossorigin="anonymous" src="{{ 'ouibounce.min.js' | asset_url  }}" defer></script>
  <script type="text/javascript">
    jQuery(document).ready(function($) {
      var _discount_html = $('.discount-redirect'),_btn_discount = $('.btn-discount-code');
      _discount_html.html(_btn_discount).html();
      // if you want to use the 'fire' or 'disable' fn,
      // you need to save OuiBounce to an object
      var _discount = ouibounce(document.getElementById('discount-modal'), {aggressive: true,timer: 0});
      $('body').on('click', function() {$('#discount-modal').hide();});
      $('#discount-modal .modal').on('click', function(e) {e.stopPropagation();});

    });
  </script>
{%- endunless -%}